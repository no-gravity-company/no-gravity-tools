{
    "name": "@no-gravity-tools/component-generator",
    "version": "1.0.12",
    "description": "Create template for preact web components",
    "author": "No Gravity Team",
    "private": false,
    "homepage": "https://github.com/no-gravity-company/no-gravity-tools#readme",
    "license": "ISC",
    "main": "lib/index.js",
    "type": "module",
    "typings": "lib/index.d.ts",
    "directories": {
        "lib": "lib"
    },
    "files": [
        "lib/index.js",
        "lib/index.js.map"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/no-gravity-company/no-gravity-tools.git"
    },
    "scripts": {
        "compile": "swc src --out-dir lib/index.js -s",
        "ts:check": "tsc --emitDeclarationOnly --esModuleInterop --module ESNext --target ESNext --moduleResolution node --declaration --declarationDir ./lib/types src/*.ts",
        "build": "yarn ts:check & yarn compile",
        "publish-tool": "yarn publish --access=public"
    },
    "bugs": {
        "url": "https://github.com/no-gravity-company/no-gravity-tools/issues"
    }
}
