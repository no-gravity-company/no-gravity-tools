{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/tools/*"
    ],
    "engines": {
        "node": "16.20.0"
    },
    "scripts": {
        "build": "tsc && node ./esbuild.config.js",
        "clean": "yarn cache clean --force",
        "hard-clean": "rm -rf node_modules && yarn cache clean --force",
        "publish-tools": "yarn workspaces run publish-tool",
        "lint": "yarn eslint .",
        "fix-lint": "yarn eslint . --fix",
        "format": "yarn prettier --write .",
        "link-tools": "lerna exec -- yarn link",
        "unlink-tools": "lerna exec -- yarn unlink",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.27",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "esbuild": "^0.17.10",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.7.0",
        "lerna": "^6.5.1",
        "prettier": "^2.8.4",
        "tiny-glob": "^0.2.9",
        "ts-jest": "^29.1.2",
        "typescript": "^4.9.5"
    }
}
